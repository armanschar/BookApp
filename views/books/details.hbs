<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <a href="/" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="{{book.coverImage}}" class="card-img-top" 
                     alt="{{book.title}}" style="height: 400px; object-fit: contain;">
            </div>
        </div>

        <div class="col-md-8">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">
                        <i class="bi bi-book"></i> {{book.title}}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h5 class="text-primary">
                                <i class="bi bi-info-circle"></i> Información del Libro
                            </h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <strong><i class="bi bi-calendar text-muted"></i> Año de Publicación:</strong>
                                    <span class="ms-2">{{book.publicationYear}}</span>
                                </li>
                                <li class="mb-2">
                                    <strong><i class="bi bi-tag text-muted"></i> Categoría:</strong>
                                    <span class="badge bg-info ms-2">{{getCategoryName categoriesList book.categoryId}}</span>
                                </li>
                            </ul>
                        </div>

                        <div class="col-md-6 mb-4">
                            <h5 class="text-success">
                                <i class="bi bi-person"></i> Información del Autor
                            </h5>
                            <ul class="list-unstyled">
                                <li class="mb-2">
                                    <strong><i class="bi bi-person-fill text-muted"></i> Nombre:</strong>
                                    <span class="ms-2">{{getAuthorName authorsList book.authorId}}</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <h5 class="text-warning">
                                <i class="bi bi-building"></i> Información de la Editorial
                            </h5>
                            <div class="card bg-light">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-4 mb-2">
                                            <strong><i class="bi bi-building-fill text-muted"></i> Editorial:</strong>
                                            <br><span class="me-1">{{getPublisherName publishersList book.publisherId}}</span>
                                        </div>
                                        <div class="col-md-4 mb-2">
                                            <strong><i class="bi bi-geo-alt text-muted"></i> País:</strong>
                                            <br><span class="me-1">{{getCountry publishersList book.publisherId}}</span>
                                        </div>
                                        <div class="col-md-4 mb-2">
                                            <strong><i class="bi bi-telephone text-muted"></i> Teléfono:</strong>
                                            <br><span class="me-1">{{getPhone publishersList book.publisherId}}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>