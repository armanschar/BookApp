<div class="row">
    <div class="col-md-6">
        <h1>{{#if editMode}}Editar Autor{{else}}Crear Nuevo Autor{{/if}}</h1>
        
        {{#if error}}
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> {{error}}
        </div>
        {{/if}}
        
        <form method="POST" action="{{#if editMode}}/authors/edit{{else}}/authors/create{{/if}}">
            {{#if editMode}}
            <input type="hidden" name="authorId" value="{{author.id}}">
            {{/if}}
            
            <div class="mb-3">
                <label for="Name" class="form-label">Nombre del Autor *</label>
                <input type="text" class="form-control" id="Name" name="Name" 
                       value="{{#if editMode}}{{author.name}}{{else}}{{formData.Name}}{{/if}}" required="required">
            </div>

            <div class="mb-3">
                <label for="Email" class="form-label">Correo Electrónico *</label>
                <input type="email" class="form-control" id="Email" name="Email" 
                       value="{{#if editMode}}{{author.email}}{{else}}{{formData.Email}}{{/if}}" 
                       required="required">
            </div>
            
            <div class="mb-3">
                <a href="/authors" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Volver Atrás
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> {{#if editMode}}Guardar Cambios{{else}}Crear Autor{{/if}}
                </button>
            </div>
        </form>
    </div>
</div>