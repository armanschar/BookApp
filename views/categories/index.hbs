<div class="row mb-4">
    <div class="col-md-6">
        <h1>Mantenimiento de Categorias</h1>
    </div>
    <div class="col-md-6 text-end">
        <a href="/categories/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nueva Categoría
        </a>
    </div>
</div>

{{#if hasCategories}}
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre de la Categoría</th>
                <th>Descripción</th>
                <th>Número de libros asociados</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each categoriesList}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td><span class="badge bg-secondary">{{this.bookCount}}</span></td>
                <td>
                    <a href="/categories/edit/{{this._id}}" class="btn btn-sm btn-warning me-2">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a href="/categories/delete/{{this._id}}" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div class="alert alert-info text-center">
    <i class="bi bi-info-circle"></i>
    No hay categorías registradas. <a href="/categories/create">Crear una nueva categoría</a>
</div>
{{/if}}