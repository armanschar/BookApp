<div class="row">
    <div class="col-md-6">
        <h1>{{#if editMode}}Editar Categoría{{else}}Crear Nueva Categoría{{/if}}</h1>
        
        {{#if error}}
        <div class="alert alert-danger">
            {{error}}
        </div>
        {{/if}}
        
        <form method="POST" action="{{#if editMode}}/categories/edit{{else}}/categories/create{{/if}}">
            {{#if editMode}}
            <input type="hidden" name="categoryId" value="{{category._id}}">
            {{/if}}
            
            <div class="mb-3">
                <label for="name" class="form-label">Nombre de la Categoría *</label>
                <input type="text" class="form-control" id="name" name="name" 
                       value="{{#if editMode}}{{category.name}}{{/if}}" required="required">
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Descripción *</label>
                <input type="text" class="form-control" id="description" name="description" 
                       value="{{#if editMode}}{{category.description}}{{/if}}" required="required">
            </div>
            
            <div class="mb-3">
                <a href="/categories" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Volver Atrás
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> {{#if editMode}}Guardar Cambios{{else}}Crear Categoría{{/if}}
                </button>
            </div>
        </form>
    </div>
</div>