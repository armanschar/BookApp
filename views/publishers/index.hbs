<div class="row mb-4">
    <div class="col-md-6">
        <h1>Mantenimiento de Editoriales</h1>
    </div>
    <div class="col-md-6 text-end">
        <a href="/publishers/create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear Nueva Editorial
        </a>
    </div>
</div>

{{#if hasPublishers}}
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre de la Editorial</th>
                <th>Teléfono</th>
                <th>País</th>
                <th>Número de libros asociados</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each publishersList}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.phone}}</td>
                <td>{{this.country}}</td>
                <td><span class="badge bg-secondary">{{this.bookCount}}</span></td>
                <td>
                    <a href="/publishers/edit/{{this.id}}" class="btn btn-sm btn-warning me-2">
                        <i class="bi bi-pencil"></i> Editar
                    </a>
                    <a href="/publishers/delete/{{this.id}}" class="btn btn-sm btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
{{else}}
<div class="alert alert-info text-center">
    <i class="bi bi-info-circle"></i>
    No hay editoriales registradas. <a href="/publishers/create">Crear una nueva editorial</a>
</div>
{{/if}}