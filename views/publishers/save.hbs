<div class="row">
    <div class="col-md-6">
        <h1>{{#if editMode}}Editar Editorial{{else}}Crear Nueva Editorial{{/if}}</h1>
        
        {{#if error}}
        <div class="alert alert-danger">
            <i class="bi bi-exclamation-triangle"></i> {{error}}
        </div>
        {{/if}}
        
        <form method="POST" action="{{#if editMode}}/publishers/edit{{else}}/publishers/create{{/if}}">
            {{#if editMode}}
            <input type="hidden" name="publisherId" value="{{publisher._id}}">
            {{/if}}
            
            <div class="mb-3">
                <label for="name" class="form-label">Nombre de la Editorial *</label>
                <input type="text" class="form-control" id="name" name="name" 
                       value="{{#if editMode}}{{publisher.name}}{{else}}{{formData.name}}{{/if}}" required="required">
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">Teléfono *</label>
                <input type="tel" class="form-control" id="phone" name="phone" 
                       value="{{#if editMode}}{{publisher.phone}}{{else}}{{formData.phone}}{{/if}}" 
                       required="required" placeholder="Ej: +1-809-555-1234">
            </div>
            
            <div class="mb-3">
                <label for="country" class="form-label">País *</label>
                <input type="text" class="form-control" id="country" name="country" 
                       value="{{#if editMode}}{{publisher.country}}{{else}}{{formData.country}}{{/if}}" 
                       required="required" placeholder="Ej: República Dominicana">
            </div>

            <div class="mb-3">
                <a href="/publishers" class="btn btn-secondary me-2">
                    <i class="bi bi-arrow-left"></i> Volver Atrás
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> {{#if editMode}}Guardar Cambios{{else}}Crear Editorial{{/if}}
                </button>
            </div>
        </form>
    </div>
</div>